module main
author unknown
version 1 0 
description ''

  spec ' ' 'BatteryTab' 'BatteryTab'
  spec ' ' 'ColorTab' 'ColorTab'
  spec ' ' 'MotorTab' 'MotorTab'
  spec ' ' 'bat' 'bat _ _' 'auto auto' '10' '10'
  spec 'r' 'color' 'color _ _ _' 'auto auto auto' 10 '10' '10'
  spec 'r' 'motor' 'motor'

to BatteryTab {
  comment 'Battery tab'
  '[tft:LVGLaddtab]' 'Battery' 'tabs'
  comment 'add voltage bar'
  '[tft:LVGLaddobj]' 'bar' 'voltage' 'Battery'
  '[tft:LVGLaddlabel]' 'label_vol' 2 'Voltage:' 'Battery'
  '[tft:LVGLsetpos]' 'label_vol' 30 0
  '[tft:LVGLsetpos]' 'voltage' 10 30
  '[tft:LVGLsetsize]' 'voltage' 220 20
  '[tft:LVGLsetattribute]' 'range' 'voltage' 0 8000
  comment 'add current bar'
  '[tft:LVGLaddobj]' 'bar' 'current' 'Battery'
  '[tft:LVGLaddlabel]' 'label_cur' 2 'Current:' 'Battery'
  '[tft:LVGLsetpos]' 'label_cur' 30 70
  '[tft:LVGLsetpos]' 'current' 10 100
  '[tft:LVGLsetsize]' 'current' 220 20
  '[tft:LVGLsetattribute]' 'range' 'current' 0 1000
}

to ColorTab {
  comment 'Color tab'
  '[tft:LVGLaddtab]' 'Color' 'tabs'
  '[tft:LVGLaddobj]' 'led' 'led' 'Color'
  '[tft:LVGLsetpos]' 'led' 130 20
  '[tft:LVGLsetsize]' 'led' 100 100
  '[tft:LVGLaddobj]' 'switch' 'switch' 'Color'
  '[tft:LVGLsetpos]' 'switch' 0 30
  '[tft:LVGLsetsize]' 'switch' 100 50
  '[tft:LVGLaddlabel]' 'label_switch' 2 'Surface' 'Color'
  '[tft:LVGLsetpos]' 'label_switch' 20 0
  add_callback 'motor'
}

to MotorTab {
  comment 'Motor tab'
  '[tft:LVGLaddtab]' 'Motor' 'tabs'
  '[tft:LVGLaddobj]' 'arc' 'motor' 'Motor'
  '[tft:LVGLsetpos]' 'motor' 70 20
  '[tft:LVGLsetattribute]' 'range' 'motor' 0 360
  '[tft:LVGLsetattribute]' 'angles' 'motor' 0 360
  '[tft:LVGLsetattribute]' 'rotation' 'motor' 270
}

to bat voltage currrent {
  comment 'microPUP callback for bat command'
  '[tft:LVGLsetval]' 'voltage' voltage
  '[tft:LVGLsettext]' 'label_vol' ('[data:join]' 'Voltage: ' voltage) 2
  '[tft:LVGLsetval]' 'current' currrent
  '[tft:LVGLsettext]' 'label_cur' ('[data:join]' 'Current: ' currrent) 2
}

to color r g b {
  comment 'microPUP callback for color command'
  sayIt r g b ('[tft:LVGLgetval]' 'switch')
  '[tft:LVGLsetcolor]' 'led' (makeColor r g b)
  return ('[data:convertType]' ('[tft:LVGLgetval]' 'switch') 'number')
}

to motor {
  comment 'LVGL callback for motor arc'
  return ('[tft:LVGLgetval]' 'motor')
}

script 1004 50 {
to motor {}
}

script 218 62 {
whenStarted
comment 'Initialize microPUP'
init
add_command 'bat' 0 2 'h'
add_command 'motor' 1 0 'h'
add_command 'color' 1 3 'h'
comment 'Initialize LVGL'
'enable lvgl' true true
init_callback
comment 'add tabview'
'[tft:LVGLaddobj]' 'tabview' 'tabs'
BatteryTab
MotorTab
ColorTab
forever {
  comment 'update microPUP and LGL events'
  process
  handle_event
}
}

