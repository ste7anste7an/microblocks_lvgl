module main
author unknown
version 1 0 
description ''

script 510 73 {
whenStarted
comment 'animate bar values'
forever {
  for i 10 {
    '[tft:LVGLsetval]' 'bar1' (10 * i)
    '[tft:LVGLsetval]' 'bar2' (10 * i)
    '[tft:LVGLsetval]' 'bar3' (10 * i)
    waitMillis 200
  }
  for i 10 {
    '[tft:LVGLsetval]' 'bar1' (100 - (10 * i))
    '[tft:LVGLsetval]' 'bar2' (100 - (10 * i))
    '[tft:LVGLsetval]' 'bar3' (100 - (10 * i))
    waitMillis 200
  }
}
}

script 78 78 {
whenStarted
comment 'initialize LVGL and erase all objects'
'enable lvgl' true true
'[tft:LVGLaddobj]' 'bar' 'bar1'
'[tft:LVGLsetpos]' 'bar1' 10 30
'[tft:LVGLaddobj]' 'bar' 'bar2'
'[tft:LVGLsetpos]' 'bar2' 20 100
'[tft:LVGLsetcolor]' 'bar2' (colorSwatch 252 16 90 255) (colorSwatch 239 14 74 255)
comment 'make bar thicker'
'[tft:LVGLsetsize]' 'bar2' 170 30
'[tft:LVGLaddobj]' 'bar' 'bar3'
comment 'vertical bar by setting height larger than width'
'[tft:LVGLsetsize]' 'bar3' 30 150
'[tft:LVGLsetpos]' 'bar3' 220 60
comment 'background color is already opaque for bars'
'[tft:LVGLsetcolor]' 'bar3' (colorSwatch 35 190 30 255) (colorSwatch 35 190 30 255)
}


